{
	"dependencies": {
		"gulp": "^3.9.1",
		"replace-in-file": "^3.4.2"
	},
	"devDependencies": {
		"jest": "^24.1.0",
		"sinon": "^4.4.6"
	},
	"jest": {
		"modulePathIgnorePatterns": [
			"/generator-liferay-theme/generators/layout/"
		],
		"testPathIgnorePatterns": [
			"/node_modules/",
			"/__fixtures__/"
		]
	},
	"keywords": [
		"yeoman-generator"
	],
	"private": true,
	"resolutions": {
		"ansi-colors": "3.2.4"
	},
	"scripts": {
		"changelog": "npx liferay-changelog-generator",
		"changelog:regenerate": "npx liferay-changelog-generator --regenerate",
		"ci": "yarn format:check && yarn lint && yarn test",
		"format": "prettier --write '*.{js,json,md}' 'packages/**/*.{js,json,md}'",
		"format:check": "prettier --list-different '*.{js,json,md}' 'packages/**/*.{js,json,md}'",
		"lint": "eslint 'packages/**/*.js'",
		"lint:fix": "eslint --fix 'packages/**/*.js'",
		"test": "jest",
		"updatePackageVersions": "replace-in-file --configFile=update-package-versions-config.js"
	},
	"workspaces": [
		"packages/*"
	]
}
