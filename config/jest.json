{
	"automock": false,
	"coverageDirectory": "build/coverage",
	"coverageThreshold": {
		"global": {
			"functions": 80,
			"lines": 80
		}
	},
	"moduleNameMapper": {
		"(.*)\\.soy$": "$1.soy.js",
		"clay-(.*)$": "<rootDir>/node_modules/clay-$1"
	},
	"modulePathIgnorePatterns": ["/classes/", "/__mock__/", "/__fixtures__/"],
	"setupFiles": [
		"<rootDir>/test/metal/setup/setup.js",
		"<rootDir>/test/metal/setup/setup_framework.js"
	],
	"snapshotSerializers": ["metal-jest-serializer"],
	"testMatch": ["<rootDir>/test/metal/js/**/*.es.js"],
	"testResultsProcessor": "./node_modules/liferay-jest-junit-reporter",
	"testURL": "http://localhost",
	"transformIgnorePatterns": ["<rootDir>.*(node_modules)(?!.*metal.*).*$"]
}
