{
	"output": "build.liferay/jar",

	"ignore": ["**/*"],
	"exclude": {
		"*": ["**/*"]
	},

	"sources": ["dist", "src.liferay"],
	"rules": [
		{
			"description": "Transpile Liferay bootstrap file",
			"test": "^src.liferay/index.js",
			"use": [
				{
					"loader": "babel-loader",
					"options": {
						"presets": ["babel-preset-liferay-standard"]
					}
				}
			]
		},
		{
			"description": "Transform webpack bundles",
			"test": "^dist/[^/]+/.*-es5.*\\.js$",
			"use": [
				{
					"loader": "liferay-npm-build-support/lib/loader/wrap-webpack-bundle",
					"options": {
						"removePrefix": "dist/"
					}
				},
				{
					"loader": "liferay-npm-build-support/lib/loader/replace-regexp",
					"options": {
						"pattern": "\"app-root\"",
						"replacement": "\"#\"+_LIFERAY_PARAMS_.portletElementId"
					}
				},
				"liferay-npm-build-support/lib/loader/namespace-webpack"
			]
		},
		{
			"description": "Remove content hash from Angular filenames",
			"test": "^dist/[^/]+/.*",
			"include": [
				"^dist/[^/]+/.*-es5.*\\.js$",
				"^dist/[^/]+/styles.*\\.css$"
			],
			"use": ["liferay-npm-build-support/lib/loader/remove-webpack-hash"]
		}
	],

	"create-jar": {
		"output-dir": "build.liferay",
		"features": {
			"js-extender": true
		}
	}
}
