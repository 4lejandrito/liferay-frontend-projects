import React from 'react';
import ReactDOM from 'react-dom';

export default class extends React.Component {
	render() {
		return (
            <div>
				<div>
        	        <span className="tag"><%- labels.porletNamespace %>:</span> 
					<span className="value">{this.props.portletNamespace}</span>
				</div>
				<div>
    	            <span className="tag"><%- labels.contextPath %>:</span>
					<span className="value">{this.props.contextPath}</span>
				</div>
				<div>
	                <span className="tag"><%- labels.portletElementId %>:</span>
					<span className="value">{this.props.portletElementId}</span>
				</div>
				<% if (hasConfiguration) { %>
				<div>
					<span className="tag"><%- labels.configuration %>:</span>
					<span className="value">
						{JSON.stringify(this.props.configuration, null, 2)}
					</span>
				</div>
				<% } %>
				<% if (hasPreferences) { %>
				<div>
					<span className="tag"><%- labels.preferences %>:</span>
					<span className="value">
						{JSON.stringify(this.props.preferences, null, 2)}
					</span>
				</div>
				<% } %>
			</div>
		);
	}	
}