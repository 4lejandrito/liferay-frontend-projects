		"fs-extra": "^8.1.0",
		"globby": "^10.0.1",
		"jszip": "^3.1.5",
		"liferay-npm-build-tools-common": "3.0.0",
		"pretty-time": "^1.1.0",
		"read-json-sync": "^2.0.1",
		"webpack": "^4.41.6",
