export default function main(props) { 
	const node = document.getElementById(props.portletElementId);
                                                                                    
	node.innerHTML =`                                                               
		<div>
			<div>
				<span class="tag">
					${Liferay.Language.get('portlet-namespace')}:
				</span> 
				<span class="value">${props.portletNamespace}</span>
			</div>
			<div>
				<span class="tag">
					${Liferay.Language.get('context-path')}:
				</span> 
				<span class="value">${props.contextPath}</span>
			</div>
			<div>
				<span class="tag">
					${Liferay.Language.get('portlet-element-id')}:
				</span> 
				<span class="value">${props.portletElementId}</span>
			</div>
<% if (addConfigurationSupport) { 
%>			<div>
				<span class="tag">
					${Liferay.Language.get('configuration')}:
				</span> 
				<span class="value pre">${JSON.stringify(props.configuration, null, 2)}</span>
			</div>
<% } 
%>		</div>
	`;                                                                          
}                                                                                   
