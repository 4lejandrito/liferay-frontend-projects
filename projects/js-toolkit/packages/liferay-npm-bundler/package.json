		"@types/webpack": "^4.41.6"
	},
	"dependencies": {
		"acorn": "^6.2.1",
		"cross-spawn": "^7.0.0",
		"ejs": "^2.6.1",
		"escodegen": "^1.14.1",
		"estraverse": "^4.3.0",
		"fs-extra": "^8.1.0",
		"globby": "^10.0.1",
		"jszip": "^3.1.5",
		"liferay-js-toolkit-core": "3.0.0-alpha.2",
		"pretty-time": "^1.1.0",
		"read-json-sync": "^2.0.1",
		"source-map": "^0.7.3",
