{
	"devDependencies": {
		"eslint": "^5.15.3",
		"eslint-config-liferay": "^3.0.0",
		"prettier": "^1.16.4"
	},
	"private": true,
	"scripts": {
		"ci": "yarn format:check && yarn lint && yarn test",
		"format": "prettier --write '**/*.js' '**/*.json' '**/*.md'",
		"format:check": "prettier --list-different '**/*.js' '**/*.json' '**/*.md'",
		"lint": "eslint '**/*.js'",
		"lint:fix": "eslint --fix '**/*.js'",
		"test": "yarn workspaces run test"
	},
	"workspaces": [
		"packages/*"
	],
	"version": "0.1.0"
}
